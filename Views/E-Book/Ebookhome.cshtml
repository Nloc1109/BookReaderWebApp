@{
    ViewData["Title"] = "Sách điện tử";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="hero-content">
        <div class="hero-left">
            <h1>Sách điện tử</h1>
            <p>Khám phá thế giới sách điện tử với hàng nghìn đầu sách chất lượng cao. Đọc sách mọi lúc, mọi nơi với trải nghiệm đọc tuyệt vời và tính năng tương tác thông minh.</p>
            
            <div class="hero-search">
                <div class="search-container">
                    <i class="fas fa-search"></i>
                    <input type="text" class="hero-search-input" placeholder="Tìm kiếm sách điện tử, tác giả, thể loại...">
                    <button class="search-btn">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>

            <div class="hero-stats">
                <div class="stat-item">
                    <i class="fas fa-book-open"></i>
                    <div class="stat-info">
                        <div class="stat-number">75,000+</div>
                        <div class="stat-label">E-books</div>
                    </div>
                </div>
                <div class="stat-item">
                    <i class="fas fa-award"></i>
                    <div class="stat-info">
                        <div class="stat-number">500+</div>
                        <div class="stat-label">Tác giả</div>
                    </div>
                </div>
                <div class="stat-item">
                    <i class="fas fa-star"></i>
                    <div class="stat-info">
                        <div class="stat-number">4.8★</div>
                        <div class="stat-label">Đánh giá</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="hero-right">
            <div class="floating-books">
                <div class="floating-book book-1">
                    <i class="fas fa-tablet-alt"></i>
                </div>
                <div class="floating-book book-2">
                    <i class="fas fa-mobile-alt"></i>
                </div>
                <div class="floating-book book-3">
                    <i class="fas fa-laptop"></i>
                </div>
                <div class="floating-book book-4">
                    <i class="fas fa-bookmark"></i>
                </div>
                <div class="floating-book book-5">
                    <i class="fas fa-highlighter"></i>
                </div>
            </div>

            <div class="featured-categories">
                <h3>Thể loại nổi bật</h3>
                <div class="category-preview">
                    <div class="preview-item">
                        <i class="fas fa-graduation-cap"></i>
                        <span>Giáo dục</span>
                    </div>
                    <div class="preview-item">
                        <i class="fas fa-rocket"></i>
                        <span>Công nghệ</span>
                    </div>
                    <div class="preview-item">
                        <i class="fas fa-palette"></i>
                        <span>Nghệ thuật</span>
                    </div>
                    <div class="preview-item">
                        <i class="fas fa-leaf"></i>
                        <span>Thiên nhiên</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

