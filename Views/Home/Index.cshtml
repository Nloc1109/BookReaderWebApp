@{
    ViewData["Title"] = "Trang chủ - BookReader";
}

<!-- Hero Section -->
<section class="hero">
    <div class="hero-content">
        <h1>
            Thư viện <span class="highlight">sách điện tử</span><br>
            <span class="highlight">sách nói</span> miễn phí
        </h1>
        
        <p>
            BookReader là thư viện sách online cho phép người dùng đọc sách, nghe sách online. 
            Chúng tôi có rất nhiều sách thuộc nhiều thể loại, bạn đọc có thể xem online hoặc download về máy để tiện theo dõi.
        </p>

        <div class="search-section">
            <div class="search-container">
                <div class="search-input">
                    <i class="fas fa-search"></i>
                    <input type="text" placeholder="Tìm kiếm sách, tác giả, thể loại...">
                </div>
                <button class="search-btn">
                    <i class="fas fa-search"></i>
                    <span>Tìm kiếm</span>
                </button>
            </div>

            <div class="filter-options">
                <label class="filter-option">
                    <input type="radio" name="filter" value="all" checked>
                    <span class="radio-custom"></span>
                    <span>Sách điện tử</span>
                </label>
                <label class="filter-option">
                    <input type="radio" name="filter" value="audiobook">
                    <span class="radio-custom"></span>
                    <span>Sách nói</span>
                </label>
            </div>
        </div>
    </div>
</section>

<!-- Featured Books Section -->
<section class="featured-section">
    <div class="section-title">Sách nổi bật</div>
    
    <div class="books-grid">
        <div class="book-card">
            <div class="book-cover">
                <i class="fas fa-book"></i>
            </div>
            <div class="book-info">
                <h3>Phiêu Lưu Cùng Toán Học</h3>
                <p>Nhà xuất bản Giáo dục Việt Nam</p>
                <div class="book-actions">
                    <button class="btn-read">Đọc ngay</button>
                    <button class="btn-favorite"><i class="far fa-heart"></i></button>
                </div>
            </div>
        </div>

        <div class="book-card">
            <div class="book-cover">
                <i class="fas fa-pen"></i>
            </div>
            <div class="book-info">
                <h3>Tập Viết Lớp 1</h3>
                <p>Bộ Giáo dục và Đào tạo</p>
                <div class="book-actions">
                    <button class="btn-read">Đọc ngay</button>
                    <button class="btn-favorite"><i class="far fa-heart"></i></button>
                </div>
            </div>
        </div>

        <div class="book-card">
            <div class="book-cover">
                <i class="fas fa-chalkboard-teacher"></i>
            </div>
            <div class="book-info">
                <h3>Sách Giáo Viên</h3>
                <p>NXB Giáo dục Việt Nam</p>
                <div class="book-actions">
                    <button class="btn-read">Đọc ngay</button>
                    <button class="btn-favorite"><i class="far fa-heart"></i></button>
                </div>
            </div>
        </div>

        <div class="book-card">
            <div class="book-cover">
                <i class="fas fa-calculator"></i>
            </div>
            <div class="book-info">
                <h3>Toán Học Cơ Bản</h3>
                <p>Bộ Giáo dục và Đào tạo</p>
                <div class="book-actions">
                    <button class="btn-read">Đọc ngay</button>
                    <button class="btn-favorite"><i class="far fa-heart"></i></button>
                </div>
            </div>
        </div>

        <div class="book-card">
            <div class="book-cover">
                <i class="fas fa-language"></i>
            </div>
            <div class="book-info">
                <h3>Tiếng Việt Nâng Cao</h3>
                <p>NXB Giáo dục Việt Nam</p>
                <div class="book-actions">
                    <button class="btn-read">Đọc ngay</button>
                    <button class="btn-favorite"><i class="far fa-heart"></i></button>
                </div>
            </div>
        </div>

        <div class="book-card">
            <div class="book-cover">
                <i class="fas fa-book-open"></i>
            </div>
            <div class="book-info">
                <h3>Vở Bài Tập Toán</h3>
                <p>Nhà xuất bản Giáo dục</p>
                <div class="book-actions">
                    <button class="btn-read">Đọc ngay</button>
                    <button class="btn-favorite"><i class="far fa-heart"></i></button>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Categories Section -->
<section class="categories-section">
    <div class="section-title">Thể loại sách</div>
    
    <div class="categories-grid">
        <div class="category-card">
            <i class="fas fa-graduation-cap"></i>
            <h3>Giáo dục</h3>
            <p>1,234 sách</p>
        </div>
        
        <div class="category-card">
            <i class="fas fa-language"></i>
            <h3>Ngôn ngữ</h3>
            <p>856 sách</p>
        </div>
        
        <div class="category-card">
            <i class="fas fa-calculator"></i>
            <h3>Toán học</h3>
            <p>567 sách</p>
        </div>
        
        <div class="category-card">
            <i class="fas fa-flask"></i>
            <h3>Khoa học</h3>
            <p>432 sách</p>
        </div>
        
        <div class="category-card">
            <i class="fas fa-palette"></i>
            <h3>Nghệ thuật</h3>
            <p>321 sách</p>
        </div>
        
        <div class="category-card">
            <i class="fas fa-heart"></i>
            <h3>Văn học</h3>
            <p>789 sách</p>
        </div>
    </div>
</section>

<!-- Newsletter Section -->
<section class="newsletter-section">
    <div class="newsletter-content">
        <h2>Đăng ký nhận thông báo</h2>
        <p>Nhận thông báo về sách mới, khuyến mãi và tin tức từ BookReader</p>
        
        <div class="newsletter-form">
            <input type="email" placeholder="Nhập email của bạn">
            <button>Đăng ký</button>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/home.js"></script>
}