@{
    ViewData["Title"] = "Trang chủ - BookReader";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="hero-background">
        <div class="hero-overlay"></div>
    </div>
    
    <div class="container">
        <div class="hero-content">
            <h1 class="hero-title">
                Thư viện <span class="text-gradient">sách điện tử</span><br>
                <span class="text-gradient">sách nói</span> miễn phí
            </h1>
            
            <p class="hero-subtitle">
                BookReader là thư viện sách online cho phép người dùng đọc sách, nghe sách online. 
                Chúng tôi có rất nhiều sách thuộc nhiều thể loại, bạn đọc có thể xem online hoặc download về máy để tiện theo dõi.
            </p>

            <div class="search-section">
                <div class="search-container">
                    <i class="fas fa-search search-icon"></i>
                    <input type="text" class="search-input" placeholder="Tìm kiếm sách, tác giả, thể loại...">
                    <button class="search-btn">
                        <i class="fas fa-search"></i>
                    </button>
                </div>

                <div class="search-filters">
                    <button class="filter-btn active" data-filter="all">Tất cả</button>
                    <button class="filter-btn" data-filter="ebook">Sách điện tử</button>
                    <button class="filter-btn" data-filter="audiobook">Sách nói</button>
                    <button class="filter-btn" data-filter="free">Miễn phí</button>
                </div>
            </div>
        </div>
    </div>
</section>

