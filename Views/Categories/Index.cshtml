@{
    ViewData["Title"] = "Thể loại sách";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="hero-content">
        <div class="hero-left">
            <h1>Thể loại sách</h1>
            <p>Khám phá đa dạng thể loại sách từ văn học kinh điển đến khoa học hiện đại. Tìm kiếm và lựa chọn những cuốn sách phù hợp với sở thích và nhu cầu của bạn.</p>
            
            <div class="hero-search">
                <div class="search-container">
                    <i class="fas fa-search"></i>
                    <input type="text" class="hero-search-input" placeholder="Tìm kiếm thể loại...">
                    <button class="search-btn">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>

            <div class="hero-stats">
                <div class="stat-item">
                    <i class="fas fa-book-open"></i>
                    <div class="stat-info">
                        <div class="stat-number">25+</div>
                        <div class="stat-label">Thể loại</div>
                    </div>
                </div>
                <div class="stat-item">
                    <i class="fas fa-book"></i>
                    <div class="stat-info">
                        <div class="stat-number">50,000+</div>
                        <div class="stat-label">Sách</div>
                    </div>
                </div>
                <div class="stat-item">
                    <i class="fas fa-users"></i>
                    <div class="stat-info">
                        <div class="stat-number">100,000+</div>
                        <div class="stat-label">Độc giả</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="hero-right">
            <div class="floating-books">
                <div class="floating-book book-1">
                    <i class="fas fa-book"></i>
                </div>
                <div class="floating-book book-2">
                    <i class="fas fa-graduation-cap"></i>
                </div>
                <div class="floating-book book-3">
                    <i class="fas fa-flask"></i>
                </div>
                <div class="floating-book book-4">
                    <i class="fas fa-heart"></i>
                </div>
                <div class="floating-book book-5">
                    <i class="fas fa-lightbulb"></i>
                </div>
            </div>

            <div class="featured-categories">
                <h3>Thể loại phổ biến</h3>
                <div class="category-preview">
                    <div class="preview-item">
                        <i class="fas fa-book-open"></i>
                        <span>Văn học</span>
                    </div>
                    <div class="preview-item">
                        <i class="fas fa-flask"></i>
                        <span>Khoa học</span>
                    </div>
                    <div class="preview-item">
                        <i class="fas fa-chart-line"></i>
                        <span>Kinh tế</span>
                    </div>
                    <div class="preview-item">
                        <i class="fas fa-heart"></i>
                        <span>Tình cảm</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

