@{
    ViewData["Title"] = ViewData["CategoryName"];
    var categoryName = ViewData["CategoryName"]?.ToString() ?? "Thể loại";
}

<!-- Hero Section -->
<section class="category-hero-section">
    <div class="category-hero-content">
        <div class="category-hero-left">
            <div class="breadcrumb">
                <a href="/Categories">Thể loại</a>
                <i class="fas fa-chevron-right"></i>
                <span>@categoryName</span>
            </div>
            
            <h1>@categoryName</h1>
            <p>Khám phá bộ sưu tập sách @categoryName.ToLower() đa dạng và phong phú. Từ những tác phẩm kinh điển đến những cuốn sách mới nhất, tất cả đều được chọn lọc kỹ lưỡng để mang đến trải nghiệm đọc tuyệt vời.</p>
            
            <div class="category-stats">
                <div class="stat-item">
                    <i class="fas fa-book"></i>
                    <div class="stat-info">
                        <div class="stat-number">2,567</div>
                        <div class="stat-label">Sách</div>
                    </div>
                </div>
                <div class="stat-item">
                    <i class="fas fa-users"></i>
                    <div class="stat-info">
                        <div class="stat-number">45,000+</div>
                        <div class="stat-label">Độc giả</div>
                    </div>
                </div>
                <div class="stat-item">
                    <i class="fas fa-star"></i>
                    <div class="stat-info">
                        <div class="stat-number">4.8</div>
                        <div class="stat-label">Đánh giá</div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="category-hero-right">
            <div class="category-icon-large">
                @{
                    var iconClass = categoryName switch
                    {
                        "Văn học" => "fas fa-book-open",
                        "Khoa học" => "fas fa-flask",
                        "Kinh tế" => "fas fa-chart-line",
                        "Tình cảm" => "fas fa-heart",
                        "Giáo dục" => "fas fa-graduation-cap",
                        "Self-help" => "fas fa-lightbulb",
                        "Lịch sử" => "fas fa-history",
                        "Du lịch" => "fas fa-mountain",
                        "Công nghệ" => "fas fa-laptop-code",
                        "Viễn tưởng" => "fas fa-magic",
                        "Nghệ thuật" => "fas fa-palette",
                        "Sức khỏe" => "fas fa-leaf",
                        _ => "fas fa-book"
                    };
                }
                <i class="@iconClass"></i>
            </div>
            
            <div class="category-tags">
                <span class="tag">Bestseller</span>
                <span class="tag">Mới nhất</span>
                <span class="tag">Được yêu thích</span>
            </div>
        </div>
    </div>
</section>

<!-- Filters Section -->
<section class="filters-section">
    <div class="filters-content">
        <div class="search-filter">
            <div class="search-container">
                <i class="fas fa-search"></i>
                <input type="text" class="search-input" placeholder="Tìm kiếm sách trong @categoryName.ToLower()...">
            </div>
        </div>
        
        <div class="filter-options">
            <select class="filter-select" id="sort-filter">
                <option value="">Sắp xếp theo</option>
                <option value="popular">Phổ biến nhất</option>
                <option value="newest">Mới nhất</option>
                <option value="rating">Đánh giá cao</option>
                <option value="title">Tên sách A-Z</option>
            </select>
            
            <select class="filter-select" id="format-filter">
                <option value="">Tất cả định dạng</option>
                <option value="ebook">Sách điện tử</option>
                <option value="audiobook">Sách nói</option>
            </select>
            
            <select class="filter-select" id="language-filter">
                <option value="">Tất cả ngôn ngữ</option>
                <option value="vietnamese">Tiếng Việt</option>
                <option value="english">Tiếng Anh</option>
                <option value="chinese">Tiếng Trung</option>
            </select>
        </div>
        
        <div class="view-options">
            <button class="view-btn active" data-view="grid">
                <i class="fas fa-th"></i>
            </button>
            <button class="view-btn" data-view="list">
                <i class="fas fa-list"></i>
            </button>
        </div>
    </div>
</section>

