<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookReader</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/auth.css?v=@DateTime.Now.Ticks" asp-append-version="true" />
    <style>
        /* Fixed Dark Mode Background */
        body {
            background: #1e293b !important;
            color: #ffffff !important;
            background-image: 
                linear-gradient(rgba(78, 222, 128, 0.1) 1px, transparent 1px),
                linear-gradient(90deg, rgba(78, 222, 128, 0.1) 1px, transparent 1px) !important;
            background-size: 30px 30px !important;
            animation: gridMove 15s linear infinite !important;
        }
        
        @@keyframes gridMove {
            0% { background-position: 0 0; }
            100% { background-position: 30px 30px; }
        }
    </style>
</head>
<body>
    @RenderBody()

    <script src="~/js/auth.js?v=@DateTime.Now.Ticks" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 