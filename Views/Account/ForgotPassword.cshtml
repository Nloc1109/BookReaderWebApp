@{
    ViewData["Title"] = "Quên mật khẩu - BookReader";
    Layout = "_AuthLayout";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <div class="auth-logo">
                <i class="fas fa-book-open"></i>
                <span>BookReader</span>
            </div>
            <h1>Quên mật khẩu</h1>
            <p>Nhập email của bạn để nhận link đặt lại mật khẩu.</p>
        </div>

        <form class="auth-form" method="post">
            <div class="form-group">
                <label for="email">Email</label>
                <div class="input-wrapper">
                    <i class="fas fa-envelope"></i>
                    <input type="email" id="email" name="email" placeholder="Nhập email của bạn" required>
                </div>
            </div>

            <button type="submit" class="auth-btn">
                <span>Gửi link đặt lại mật khẩu</span>
                <i class="fas fa-paper-plane"></i>
            </button>
        </form>

        <div class="auth-footer">
            <p>Nhớ mật khẩu? <a href="/Account/Login">Đăng nhập ngay</a></p>
        </div>
    </div>

    <div class="auth-illustration">
        <div class="illustration-content">
            <div class="floating-book book-1">
                <i class="fas fa-key"></i>
            </div>
            <div class="floating-book book-2">
                <i class="fas fa-envelope"></i>
            </div>
            <div class="floating-book book-3">
                <i class="fas fa-shield-alt"></i>
            </div>
            <div class="floating-book book-4">
                <i class="fas fa-lock"></i>
            </div>
        </div>
    </div>
</div>
